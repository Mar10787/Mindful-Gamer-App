<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>



<AnchorPane maxHeight="-Infinity"
            maxWidth="-Infinity"
            minHeight="-Infinity"
            minWidth="-Infinity"
            prefHeight="400.0"
            prefWidth="333.0"
            xmlns="http://javafx.com" xmlns:fx="http://javafx.com" fx:controller="com.example.mindfulgamer.controller.SignUpController">
        <Button fx:id = "signup"
                layoutX="138.0"
                layoutY="267.0"
                mnemonicParsing="false"
                onAction = "#onSignUpButtonClick"
                text="Sign Up"
                disable="true"
                />
        <Label
               layoutX="78.0"
               text="Sign Up!"
               >
            <font>
                <Font name="System Bold" size="48.0" />
            </font>
        </Label>
        <TextField fx:id = "fname"
                   layoutX="35.0"
                   layoutY="89.0"
                   prefHeight="25.0"
                   prefWidth="263.0"
                   promptText="First Name"
        />
        <TextField fx:id = "lname"
                   layoutX="35.0"
                   layoutY="132.0"
                   prefHeight="25.0"
                   prefWidth="263.0"
                   promptText="Last Name"
        />
        <TextField fx:id = "email"
                   layoutX="35.0"
                   layoutY="175.0"
                   prefHeight="25.0"
                   prefWidth="263.0"
                   promptText="Email"
        />
        <TextField fx:id = "password"
                   layoutX="35.0"
                   layoutY="219.0"
                   prefHeight="25.0"
                   prefWidth="263.0"
                   promptText="Password"
        />
        <Label
                layoutX="78.0"
                layoutY="319.0"
                text="Already have an account?"
        />
        <Hyperlink fx:id = "login"
                   layoutX="213.0"
                   layoutY="316.0"
                   text="Login"
                   onAction="#onSignUpButtonClick"
        />
</AnchorPane>